colorscheme darkblue
syntax on

set encoding=utf-8
set fileencodings=iso-2022-jp,sjis,utf8

set ttymouse=xterm2
set number
set showmatch
set backspace=indent,eol,start
set autoindent smartindent smartcase

set ts=4 sw=4
set softtabstop=4
set expandtab

" High light for searching a word.
set hlsearch

set cursorline

" Show the title opened
set title

filetype plugin indent on


